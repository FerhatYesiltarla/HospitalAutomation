<form class="form-horizontal " action="/account/signUp" method="post">
    <div class="form-group">
        <div class="col-sm-12">
            <input type="text" class="form-control" id="firstName" placeholder="Ad" name="FirstName">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="text" class="form-control" id="lastName" placeholder="Soyad" name="LastName">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="email" class="form-control" id="email" placeholder="Email adresi" name="Email">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="text" class="form-control" id="password" placeholder="Şifre" name="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-large btn-block btn-primary">Kayıt ol</button>
        </div>
    </div>
</form>
