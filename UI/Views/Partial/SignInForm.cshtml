<form class="form-horizontal" action="/account/signIn" method="post">
    <div class="form-group">
        <div class="col-sm-12">
            <input type="email" class="form-control" id="email" placeholder="Email adresi" name="Email">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="password" class="form-control" id="pwd" placeholder="Şifre" name="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <div class="checkbox">
                <label><input type="checkbox" name="remember">Beni hatırla</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-large btn-block btn-primary">Giriş yap</button>
        </div>
    </div>
</form>
